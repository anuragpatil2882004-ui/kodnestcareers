{
  "name": "kodnestcareers",
  "private": true,
  "version": "0.0.1",
  "description": "KodNestCareers monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "api:dev": "npm run dev -w @kodnestcareers/api",
    "web:dev": "npm run dev -w @kodnestcareers/web",
    "worker:dev": "npm run dev -w @kodnestcareers/worker",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down"
  },
  "engines": {
    "node": ">=18"
  }
}
