# KodNestCareers - Environment Template
# Copy to .env and fill values

# ============ API (NestJS) ============
NODE_ENV=development
PORT=3001
API_PREFIX=api

# ============ Database ============
DATABASE_URL=postgresql://user:password@localhost:5432/kodnestcareers
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=kodnestcareers

# ============ Redis ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============ Web (Next.js) ============
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ============ Worker (BullMQ) ============
WORKER_REDIS_URL=redis://localhost:6379

# ============ AI Service (FastAPI) ============
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_PORT=8000

# ============ Auth / Secrets ============
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d
